<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:title="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="400dp"
        android:layout_height="225dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="400dp"
        android:layout_height="225dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@android:drawable/ic_menu_report_image" />

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:shadowColor="#000000"
        android:shadowDx="4.5"
        android:shadowDy="4.5"
        android:shadowRadius="1.6"
        android:text="dbname"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/txtMessage0"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginRight="15dp"
        android:shadowColor="#000000"
        android:shadowDx="4.5"
        android:shadowDy="4.5"
        android:shadowRadius="1.6"
        android:text="id"
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/txtMessage1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:shadowColor="#000000"
        android:shadowDx="4.5"
        android:shadowDy="4.5"
        android:shadowRadius="1.6"
        android:text="date"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMessage" />

    <TextView
        android:id="@+id/txtMessage2"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:shadowColor="#000000"
        android:shadowDx="4.5"
        android:shadowDy="4.5"
        android:shadowRadius="1.6"
        android:text="time"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMessage1" />

    <TextView
        android:id="@+id/txtMessage3"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:shadowColor="#000000"
        android:shadowDx="4.5"
        android:shadowDy="4.5"
        android:shadowRadius="1.6"
        android:text="temp"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMessage2" />

    <TextView
        android:id="@+id/txtMessage4"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:shadowColor="#000000"
        android:shadowDx="4.5"
        android:shadowDy="4.5"
        android:shadowRadius="1.6"
        android:text="humid"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMessage3" />

    <TextView
        android:id="@+id/txtMessage5"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:shadowColor="#000000"
        android:shadowDx="4.5"
        android:shadowDy="4.5"
        android:shadowRadius="1.6"
        android:text="rain"
        android:textAlignment="textStart"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMessage4" />

    <TextView
        android:id="@+id/txtMessage6"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:shadowColor="#000000"
        android:shadowDx="4.5"
        android:shadowDy="4.5"
        android:shadowRadius="1.6"
        android:text="winds"
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMessage0" />

    <TextView
        android:id="@+id/txtMessage7"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:shadowColor="#000000"
        android:shadowDx="4.5"
        android:shadowDy="4.5"
        android:shadowRadius="1.6"
        android:text="windd"
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMessage6" />

    <TextView
        android:id="@+id/txtMessage8"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:shadowColor="#000000"
        android:shadowDx="4.5"
        android:shadowDy="4.5"
        android:shadowRadius="1.6"
        android:text="m1"
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMessage7" />

    <TextView
        android:id="@+id/txtMessage9"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:shadowColor="#000000"
        android:shadowDx="4.5"
        android:shadowDy="4.5"
        android:shadowRadius="1.6"
        android:text="m2"
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMessage8" />

    <TextView
        android:id="@+id/txtMessage10"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:shadowColor="#000000"
        android:shadowDx="4.5"
        android:shadowDy="4.5"
        android:shadowRadius="1.6"
        android:text="lux"
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMessage9" />

    <TextView
        android:id="@+id/txtMessage11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:shadowColor="#000000"
        android:shadowDx="4.5"
        android:shadowDy="4.5"
        android:shadowRadius="1.6"
        android:text="Image from 203.150.37.159 - nectecGreen01"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView1" />

    <Button
        android:id="@+id/btnComment"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="160dp"
        android:backgroundTint="#4C4C4C"
        android:text="Comment"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView1" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:backgroundTint="#4C4C4C"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        app:layout_constraintStart_toEndOf="@+id/btnComment"
        app:layout_constraintTop_toTopOf="@+id/btnComment" />

</androidx.constraintlayout.widget.ConstraintLayout>